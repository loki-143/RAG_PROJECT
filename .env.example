# ===========================================
# RAG API Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Required: Google API Key for Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Optional: API Key for securing endpoints
# If not set, API will be open (not recommended for production)
RAG_API_KEY=your_secure_api_key_here

# Environment (development/production)
ENVIRONMENT=production

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Worker configuration
MAX_WORKERS=8
UVICORN_WORKERS=4

# Rate limiting (requests per window)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Input validation
MAX_QUESTION_LENGTH=5000
MAX_REQUEST_SIZE_MB=10

# Allowed repository domains (comma-separated, or * for all)
ALLOWED_DOMAINS=github.com,gitlab.com,bitbucket.org

# CORS allowed origins (comma-separated, or * for all)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Enable API docs (set to false in production)
ENABLE_DOCS=false

# ===========================================
# Storage Cleanup Settings
# ===========================================
# Maximum total storage in MB (oldest indexes deleted when exceeded)
MAX_STORAGE_MB=500

# Maximum number of indexes to keep (oldest deleted when exceeded)
MAX_INDEXES=50

# Delete chat histories older than X days
MAX_HISTORY_AGE_DAYS=30
